@model IEnumerable<PHAMVANTHANH2011064477.Models.HocPhan>

@{
    ViewBag.Title = "ListHocPhan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách Học Phần</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenHP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoTinChi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenHP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoTinChi)
        </td>
        <td>
            <input type="button" id="btnDangKy" value="Đăng Ký" class="btn btn-success" />
        </td>
    </tr>
}

</table>
