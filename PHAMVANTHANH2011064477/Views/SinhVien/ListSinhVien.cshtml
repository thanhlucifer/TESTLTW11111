            <img src="@item.Hinh" alt="Alternate Text" class="img"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaNganh)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MaSV }) |
            @Html.ActionLink("Details", "Detail", new { id=item.MaSV }) |
